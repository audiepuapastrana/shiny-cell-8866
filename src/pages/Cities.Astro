---
// layouts/BlogPost.astro
const { title, description, pubDate, heroImage } = Astro.props;
---
<html lang="en">
  <head>
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <header>
      <h1>{title}</h1>
      <img src={heroImage} alt={title} />
      <p>{pubDate.toDateString()}</p>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>
